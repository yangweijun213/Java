package cn.sxt.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

import cn.sxt.vo.User;

@Controller
@RequestMapping("/user") //窄化-分模块开发，在user下面找list.注意页面跳转
public class UserController {
	private List<User> list = new ArrayList<User>();
	public UserController(){
		list.add(new User(1,"aa","1111"));
		list.add(new User(2,"bb","2222"));
		list.add(new User(3,"cc","3333"));
	}

	//查询所有用户
	@RequestMapping("/list")
	public String list(ModelMap map){
		map.addAttribute("list",list);
		return "/list.jsp"; //加了/ 跳转到了 /usersys/list.jsp
		
	}
	//添加用户
	@RequestMapping("/add")
	public String add(User user){
		user.setId(list.get(list.size()-1).getId()+1);
		list.add(user);
		//return "/user/list.do"
		//相当于刷新,就不会有过时信息
		return "redirect:list.do";
	}
	
	//删除用户
	@RequestMapping("/delete")
	public String delete(int id){
		for(int i=0;i<list.size();i++){
			if(list.get(i).getId()==id){
				list.remove(i);
				break;
			}
		}
		//相当于刷新,就不会有过时信息
		return "redirect:list.do";
	}
	
	//使用restful delete/123
	//url /user/123/delete1
	@RequestMapping(value="/{id}"/delete1)
	public String delete1(@PathVariable int id){
		for(int i=0;i<list.size();i++){
			if(list.get(i).getId()==id){
				list.remove(i);
				break;
			}
		}
		//相当于刷新,就不会有过时信息
		return "redirect:list.do";
	}
}
